{
    "rules": {
        "array-type": [
            true,
            "array"
        ],
        "align": [
            true,
            "parameters",
            "statements",
            "members"
        ],
        "arrow-parens": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "cyclomatic-complexity": [
            true,
            18
        ],
        "eofline": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": [
            true,
            "always-prefix"
        ],
        "jsdoc-format": [
            true
        ],
        "max-file-line-count": [
            true,
            420
        ],
        "max-line-length": [
            true,
            {
                "limit": 300,
                "ignore-pattern": "^import |^export {(.*?)}|d=|path=|data:image"
            }
        ],
        "no-consecutive-blank-lines": true,
        "no-console": [
            true,
            "log"
        ],
        "no-debugger": true,
        "no-duplicate-imports": true,
        "no-duplicate-variable": [
            true,
            "check-parameters"
        ],
        "no-empty": [
            true,
            "allow-empty-catch"
        ],
        "no-invalid-this": [
            true,
            "check-function-in-method"
        ],
        "no-irregular-whitespace": true,
        "no-unused-expression": true,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "object-literal-shorthand": true,
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "single",
            "jsx-single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "always"
                },
                "singleline": "never"
            }
        ],
        "triple-equals": true,
        "unified-signatures": true,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-operator",
            "check-separator",
            "check-typecast",
            "check-preblock"
        ]
    }
}